{
  "name": "@will-stone/react-hooks",
  "version": "2.0.1",
  "description": "A collection of custom hooks for React",
  "repository": "https://github.com/will-stone/react-hooks",
  "license": "MIT",
  "author": "Will Stone <654103+will-stone@users.noreply.github.com>",
  "main": "dist/index.js",
  "module": "dist/react-hooks.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rimraf ./pkg",
    "build": "pika build",
    "lint": "eslint . --ignore-path .gitignore",
    "prerelease": "yarn build",
    "release": "np",
    "test": "jest",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "version": "yarn build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "prettier": "@will-stone/prettier-config",
  "eslintConfig": {
    "extends": [
      "@will-stone/eslint-config",
      "@will-stone/eslint-config/react",
      "@will-stone/eslint-config/jest",
      "@will-stone/eslint-config/typescript"
    ]
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/pkg"
    ],
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "<rootDir>/setupFilesAfterEnv.ts"
    ]
  },
  "devDependencies": {
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-web": "^0.9.2",
    "@pika/plugin-ts-standard-pkg": "^0.9.2",
    "@reach/router": "^1.3.3",
    "@testing-library/jest-dom": "^5.8.0",
    "@testing-library/react": "^10.0.4",
    "@types/jest": "^25.2.3",
    "@types/reach__router": "^1.3.5",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@will-stone/eslint-config": "^1.8.0",
    "@will-stone/prettier-config": "^3.0.1",
    "eslint": "^7.0.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.4",
    "np": "^6.2.3",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.0.0",
    "typescript": "^3.9.3"
  },
  "peerDependencies": {
    "react": ">=16.13"
  },
  "publishConfig": {
    "access": "public"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg"
      ],
      [
        "@pika/plugin-build-web"
      ]
    ]
  },
  "np": {
    "contents": "pkg"
  }
}
