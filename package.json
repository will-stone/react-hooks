{
  "name": "@will-stone/react-hooks",
  "version": "2.0.1",
  "description": "A collection of custom hooks for React",
  "license": "MIT",
  "repository": "https://github.com/will-stone/react-hooks",
  "author": "Will Stone <contact@wstone.io>",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsdx build",
    "cleanup": "rimraf dist",
    "lint": "tsdx lint",
    "prebuild": "yarn cleanup",
    "prepublishOnly": "yarn cleanup && yarn build",
    "pretty-package": "prettier --write package.json",
    "start": "tsdx watch",
    "test": "tsdx test --env=jsdom"
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "react": ">=16.8"
  },
  "devDependencies": {
    "@testing-library/react": "^9.2.0",
    "@types/jest": "^24.0.18",
    "@types/react": "^16.9.4",
    "@types/react-dom": "^16.9.1",
    "@will-stone/prettier-config": "^1.0.0",
    "eslint-config-react-app": "5.0.1",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "husky": "^3.0.8",
    "prettier-plugin-package": "^0.3.1",
    "react": "^16.10.1",
    "react-dom": "^16.10.1",
    "rimraf": "^3.0.0",
    "tsdx": "^0.9.3",
    "tslib": "^1.10.0",
    "typescript": "^3.6.3"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "react-app",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "simple-import-sort"
    ],
    "rules": {
      "prettier/prettier": "error",
      "simple-import-sort/sort": "error"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint && yarn pretty-package && git add package.json"
    }
  },
  "module": "dist/react-hooks.esm.js",
  "prettier": "@will-stone/prettier-config",
  "types": "dist/index.d.ts"
}
